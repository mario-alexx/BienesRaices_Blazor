@page "/"
@using BienesRaices.Modelos.DTO
@using BienesRaices.Repositorio.IRepositorio
@inject IPropiedadRepositorio PropiedadRepositorio

<PageTitle>Inicio</PageTitle>

<h1 class="text-center text-uppercase">Últimas Propiedades</h1>

<div class="row">
    @foreach(var propiedad in propiedadesDTO)
    {
        @if (propiedad.Activo)
        {
            <div class="col-3 mt-3">
                <div class="card">
                    <div class="card-header">
                        <h3>@propiedad.Nombre</h3>
                    </div>
                    <div class="card-body">
                        @if (propiedad.ImagenPropiedad.Count() > 0)
                        {
                            @foreach (var imagen in propiedad.ImagenPropiedad.Take(1))
                            {
                                <img src="@imagen.UrlImagenPropiedad" class="img-fluid" />
                            }
                        }
                        else
                        {
                            <img src="imagenes/no-image.jpg" class="img-fluid" />
                        }
                    </div>
                    <div class="card-footer">
                        <NavLink href="@($"detalle-propiedad/{propiedad.Id}")">Más información...</NavLink>
                    </div>
                </div>
            </div>
        }
    }
</div>


@code {
    private IEnumerable<PropiedadDTO> propiedadesDTO { get; set; } = new List<PropiedadDTO>();

    protected override async Task OnInitializedAsync()
    {
        propiedadesDTO = await PropiedadRepositorio.GetAllPropiedades();
    }

}

